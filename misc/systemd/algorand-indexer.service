[Unit]
Description=Algorand Indexer daemon
After=network.target

[Service]
ExecStart=/usr/bin/algorand-indexer daemon --pidfile /var/lib/algorand/algorand-indxer.pid --algod /var/lib/algorand --postgres "host= user= password= dbname="
PIDFile=/var/lib/algorand/algorand-indxer.pid
User=algorand
Group=algorand
Restart=always
RestartSec=5s
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
